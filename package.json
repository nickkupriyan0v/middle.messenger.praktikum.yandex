{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc --noEmit",
    "build": "npm run prebuild && vite build",
    "start": "npm run prebuild && vite preview --port 3000 --strictPort",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint \"src/**/*.{css,scss}\"",
    "lint:style:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "test": "vitest",
    "test:ci": "vitest run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "sass": "^1.89.2",
    "stylelint": "^16.23.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "express": "^5.1.0",
    "handlebars": "^4.7.8",
    "uuid": "^11.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint -- --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "npm run lint:style -- --fix",
      "git add"
    ]
  }
}
